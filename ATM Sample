#include <iostream>
using namespace std;

static int bakiye;
static int hesapNo = 44;
static int sifre = 55;

int paraYatir(int yatirilacakTutar,int yatirilanTutar)
{
	
	if (yatirilacakTutar <= 5000)
	{
		if (yatirilacakTutar == yatirilanTutar)
		{
			bakiye = bakiye + yatirilanTutar;
			cout << "Deposit Successful...\nTotal Balance : " << bakiye << "\n";
		}
		else
		{
			cout << "Amounts does not match. \n";
		}
	}
	else
	{
		cout << "Your daily deposit limit is 5000 TL. \n";
	}

	
	return (0);
}

int paraCek(int cekilecekTutar)
{
	
	if (cekilecekTutar <= 2000)
	{
		if (bakiye >= cekilecekTutar)
		{
			bakiye = bakiye - cekilecekTutar;
			cout << "Whitdrawal Successful.\nAmount withdrawn : " << cekilecekTutar << "\nAvailable balance : " << bakiye << "\n";
		}
		else
		{
			cout << "insufficient balance. Your balance : " << bakiye << "\n";
		}
	}
	else
	{
		cout << "Your daily withdrawal limit is 2000 TL. \n";
	}
	return (0);
}

int secenekSec(int secenekGiris)
{
	switch (secenekGiris)
	{
	case 1:
		int yatirilacak;
		cout << "Enter amount to be deposited : ";
		cin >> yatirilacak;
		int yatirilan;
		cout << "Enter amount deposited : ";
		cin >> yatirilan;
		paraYatir(yatirilacak, yatirilan);
		break;
	case 2:
		int cekilecek;
		cout << "Enter amount to be withdrawn : ";
		cin >> cekilecek;
		paraCek(cekilecek);
		break;
	case 3:
		cout << "Total Balance : " << bakiye << "\n";
		break;
	case 4:
		exit(secenekGiris);
		break;
	default:
		break;
	}
	return (0);
}

int main() {

	int hesapNumarasi, parola;

	cout << "Enter Your Account Number : ";
	cin >> hesapNumarasi;
	
	
	while (hesapNumarasi != hesapNo)
	{
		cout << "Try Again (Account Number) : ";
		cin >> hesapNumarasi;
	}

	if (hesapNumarasi == hesapNo)
	{
		cout << "Enter Your Password : ";
		cin >> parola;
	}

	if (parola == sifre)
	{
		while (secenekSec(5) != 5)
		{
			cout << "1 - Deposit Money \n2 - Whitdraw Money \n3 - View Balance \n4 - Exit \nPlease Do a Choose : ";
			int sec;
			cin >> sec;
			secenekSec(sec);
		}
	}
	else
	{
		for (int i = 1; i < 5; i++)
		{
			if (i < 4)
			{
				if (parola == sifre)
				{
					while (secenekSec(5) != 5)
					{
						cout << "1 - Deposit Money \n2 - Whitdraw Money \n3 - View Balance \n4 - Exit \nPlease Do a Choose : ";
						int sec;
						cin >> sec;
						secenekSec(sec);
					}
				}
				else
				{
					cout << "Try Again " << "( " << i << ".trying ) : ";
					cin >> parola;
				}
			}
			else
			{
				cout << "You have entered incorrectly many times. Please try again later...";
			}
		}
	}
}
